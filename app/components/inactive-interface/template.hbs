{{#if modal}}
  {{auto-closer}}
{{/if}}

{{#circle-button class="first" action="me" active=meButtonActive}}
  {{#if me.unreadNotifications}}
    {{overlay-circle top-right=true color='red' content=me.unreadNotifications.length}}
  {{/if}}
  <img src={{me.smallpic}}>
{{/circle-button}}

{{#circle-button class="second" action="join"}}
  <div class="self-center">
    {{i-fa icon="eye" size="2x"}}
    <br>
    <span class="small">Join</span>
  </div>
{{/circle-button}}

{{#circle-button class="third" active=showInfo action=(action 'setModal' 'info')}}
  {{i-fa icon="info" size="2x" class="self-center"}}
{{/circle-button}}

{{#if showMe}}
  {{#circle-interface}}
    {{partial 'me-interface'}}
  {{/circle-interface}}
{{/if}}

{{#if showPic}}
  {{#circle-interface}}
    {{circle-pic src=me.largepic}}
  {{/circle-interface}}
{{/if}}

{{#if showNotifications}}
  {{partial 'notifications-panel'}}
{{/if}}

{{#if showInstructions}}
  {{partial 'instructions'}}
{{/if}}

{{#if showLogout}}
  {{partial 'logout'}}
{{/if}}

{{#if showInfo}}
  {{#content-panel}}
    <div class="text-center">
      <p>
        {{#if noPlayers}}
          There are no other players in your area right now.  Join up now and we'll start a new game for you. As new people join, we'll let you know!
        {{else}}
          There are other active players in your area right now! Join up!
        {{/if}}
      </p>
    </div>
  {{/content-panel}}
{{/if}}